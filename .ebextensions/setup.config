option_settings:
 - option_name: BUNDLE_DISABLE_SHARED_GEMS
   value: "1"
packages:
 yum:
  git: []
  patch: []
commands: 
  update_nokogiri:
    command: "/opt/rubies/ruby-current/bin/gem install nokogiri -v '1.7.1'"
  update_bundler: 
    command: "/opt/rubies/ruby-current/bin/gem install bundler"
  update_rake: 
    command: "/opt/rubies/ruby-current/bin/gem install -f rake"
